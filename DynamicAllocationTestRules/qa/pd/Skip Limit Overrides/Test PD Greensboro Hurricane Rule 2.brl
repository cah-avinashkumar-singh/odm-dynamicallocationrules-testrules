<?xml version="1.0" encoding="UTF-8"?>
<ilog.rules.studio.model.brl:ActionRule xmi:version="2.0" xmlns:xmi="http://www.omg.org/XMI" xmlns:ilog.rules.studio.model.brl="http://ilog.rules.studio/model/brl.ecore">
  <name>Test PD Greensboro Hurricane Rule 2</name>
  <uuid>ba13a2a6-a918-4ed0-b19a-a7ad77377ee4</uuid>
  <locale>en_US</locale>
  <definition><![CDATA[if
all of the following conditions are true : 
        - the plant of the order line item is "P043" 
        - the account number of the customer is one of { "2057187268" , "2057187326" , "2057219565" , "2057188562" } 
        - the order line item classified as "Global Allocation Items"
        - any of the following conditions is true : 
            -(the class of trade of the customer is one of { 01_HOSPITAL , 11_ALT CARE , 09_RETAIL INDEPENDENT }  
               and the sub class of trade of the customer is one of { 1H_HOSPITAL , 0A_PHCY , 0D_HOME HEALTH })
                 
then
     set the allowed quantity of the order line item to maximum of 200% of the average monthly usage of GSN of the order line item and 200  ;
     add reason code "Hurricane" with description "Hurricane - Allow 200% GSN AMU or 200" to the order line item ; 
     set the priority of the order line item for this rule to 001_OVERRIDE_ALL ;  ]]></definition>
</ilog.rules.studio.model.brl:ActionRule>
